<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$color:entry_ability_background_color">

    <DirectionalLayout
        ohos:id="$+id:title_layout"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="center"
        ohos:horizontal_center="true"
        ohos:orientation="horizontal"
        ohos:top_margin="85vp">

        <Image
            ohos:id="$+id:app_icon_image"
            ohos:height="32vp"
            ohos:width="32vp"
            ohos:image_src="$media:app_icon"
            ohos:scale_mode="clip_center"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="8vp"
            ohos:text="$string:app_name"
            ohos:text_color="$color:entry_black"
            ohos:text_size="20fp"
            ohos:text_weight="600"/>


    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="vertical"
        ohos:vertical_center="true">

        <Image
            ohos:id="$+id:center_big_image"
            ohos:height="142vp"
            ohos:width="252vp"
            ohos:image_src="$media:big_image"
            ohos:scale_mode="clip_center"/>

        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:end_margin="16vp"
            ohos:multiple_lines="true"
            ohos:start_margin="16vp"
            ohos:text="$string:game_introduction"
            ohos:text_alignment="start"
            ohos:text_color="$color:entry_black_60_percent"
            ohos:text_size="14fp"
            ohos:top_margin="40vp"/>

    </DirectionalLayout>

    <Button
        ohos:id="$+id:open_game_btn"
        ohos:height="40vp"
        ohos:width="180vp"
        ohos:align_parent_bottom="true"
        ohos:background_element="$graphic:open_game_btn_background"
        ohos:bottom_margin="24vp"
        ohos:horizontal_center="true"
        ohos:text="$string:open_game"
        ohos:text_color="#FB6522"
        ohos:text_size="16vp"
        ohos:text_weight="600"/>

</DependentLayout>